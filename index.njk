        viewBox="0 0 100 100"
        fill="currentColor"
        preserveAspectRatio="none slice">
        <path d="M50 0H100L50 100H0L50 0Z"></path>
      </svg>
      <img
        class="object-cover w-full h-56 rounded shadow-lg lg:rounded-none lg:shadow-none md:h-96 lg:h-full"
        src="./images/hero-img.jpg"
        alt=""/>
    </div>
    <div class="relative flex flex-col items-start w-full max-w-xl px-4 mx-auto md:px-0 lg:px-8 lg:max-w-screen-xl">
      <div class="mb-16 lg:my-24 text-center sm:text-left lg:max-w-lg lg:pr-5">
        <h2 class="mb-4 font-display text-5xl tracking-tight text-gray-900 sm:text-7xl sm:leading-none">
          Los Tres <br class="hidden md:block"/>
          <span class="text-deep-orange-500">
            Toritos</span>
        </h2>
        <p class="text-sans mb-12 text-gray-700 text-2xl">
          Authentic Mexican Food
        </p>
        <table>
          <thead>
            <tr>
              <th align="left" class="text-sans-cond text-gray-700 md:text-xl uppercase italic">OPEN with Drive-thru</th>
            </tr>
          </thead>
          <tbody>
            <tr class="text-xl text-gray-700">
              <td align="left" class="pr-2">Mon - Thur</td>
              <td>9:30am - 10pm</td>
            </tr>
            <tr class="text-xl text-gray-700">
              <td align="left" class="pr-2">Friday</td>
              <td>9:30am - 11pm</td>
            </tr>
            <tr class="text-xl text-gray-700">
              <td align="left" class="pr-2">Sat & Sun</td>
              <td>9:00am - 11pm</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
